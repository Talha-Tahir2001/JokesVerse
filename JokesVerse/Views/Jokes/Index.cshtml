@model IEnumerable<JokesVerse.Models.Joke>

@{
    ViewData["Title"] = "Create your own Joke";
}

<h1>Create your own Joke</h1>

<p>
    <a asp-action="Create">Create a New Joke</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.JokeQuestion)
            </th>
           @*  <th>
                @Html.DisplayNameFor(model => model.JokeAnswer)
            </th> *@
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.JokeQuestion)
            </td>
           @*  <td>
                @Html.DisplayFor(modelItem => item.JokeAnswer)
            </td> *@
            <td>
                <a asp-action="Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
